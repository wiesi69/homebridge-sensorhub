{
    "pluginAlias": "SensorHub",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "description": "Plugin name as displayed in the homebridge log.",
                "type": "string",
                "const": "SensorHub",
                "readOnly": true
              },
            "interval": {
                "description": "Sensor read interval in seconds.  Default: 10.",
                "type": "integer",
                "default": 10,
                "minimum": 1,
                "maximum": 120
            },
            "disableTemperatureService": {
                "description": "Disnable temperature service.",
                "type": "boolean",
                "default": false
            },
            "disableHumidityService": {
                "description": "Disnable humidity service.",
                "type": "boolean",
                "default": false
            },
            "disableAirPressureService": {
                "description": "Disnable temperature service.",
                "type": "boolean",
                "default": false
            },
            "disableLigthBrightnessService": {
                "description": "Disnable ligth service.",
                "type": "boolean",
                "default": false
            },
            "disableMotionDetectionService": {
                "description": "Disnable motion service.",
                "type": "boolean",
                "default": false
            },
            "disableExternalTemperatureService": {
                "description": "Disnable external temperatur service.",
                "type": "boolean",
                "default": false
            },
            "temperatureCorrection": {
                "description": "Temperature value correction.",
                "type": "integer",
                "default": 0
            },
            "airPressureCorrection": {
                "description": "Air pressure value correction.",
                "type": "integer",
                "default": 0 
            },
            "brightnessCorrection": {
                "description": "Brightness value correction.",
                "type": "integer",
                "default": 0 
            },
            "offBoardTemperatureCorrection": {
                "description": "OffBoard temperature value correction.",
                "type": "integer",
                "default": 0
            }
        }
    }
}